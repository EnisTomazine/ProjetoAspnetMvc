@{
    Business.Dono dono = ViewBag.Dono;
}
<div class="jumbotron">
    <h3>Novo Nome Pessoa</h3>
    <div>
        <a href="/Home" class="btn btn-default">Voltar</a>
    </div>

    <form action="/home/@dono.Id/AlterarDono" method="post">
        <div class="form-group">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control" id="nome" value="@dono.Nome" name="nome">
        </div>
        <button type="submit" class="btn btn-default">Alterar</button>
    </form>
</div>
